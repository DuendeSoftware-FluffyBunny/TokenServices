@page
@model FluffyBunny.Admin.Pages.Tenants.Tenant.ApiResources.ApiResource.EditModel
@{
    ViewData["Title"] = "Edit Api Resource";
}
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-area="" asp-page="/Tenants/Index">Tenants</a></li>
        <li class="breadcrumb-item"><a asp-area="" asp-page="/Tenants/Tenant/Index">@Model.TenantId</a></li>
        <li class="breadcrumb-item"><a asp-area="" asp-page="/Tenants/Tenant/ApiResources/Index">Api Resources</a></li>
        <li class="breadcrumb-item"><a asp-area="" asp-page="/Tenants/Tenant/ApiResources/ApiResource/Index" asp-route-id="@Model.Input.Id">Api Resource</a></li>

        <li class="breadcrumb-item active" aria-current="page">@ViewData["Title"]</li>
    </ol>
</nav>

<form method="post">
    <div class="card">
        <div class="card-header">
            Edit Api Resource
        </div>
        <input hidden asp-for="TenantId" class="form-control" />
        <input hidden asp-for="Input.Id" class="form-control" />
        <div id="cardBodyId">

            <div class="card-body">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <table class="table">

                        <tbody>

                            <tr>

                                <td class="w-50">
                                </td>
                                <td class="w-50">
                                    <input asp-for="Input.Enabled" />
                                    <label>Enabled</label>
                                </td>
                            </tr>
                            <tr>
                                <td class="w-50">
                                    @nameof(Model.Input.Name)
                                </td>
                                <td class="w-50">
                                    <input asp-for="Input.Name" class="form-control" />
                                    <span asp-validation-for="Input.Name" class="text-danger"></span>
                                </td>
                            </tr>
                            <tr>
                                <td class="w-50">
                                    @nameof(Model.Input.Description)
                                </td>
                                <td class="w-50">
                                    <input asp-for="Input.Description" class="form-control" />
                                    <span asp-validation-for="Input.Description" class="text-danger"></span>
                                </td>
                            </tr>

                        <tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="card-footer text-muted">
            <button type="submit" class="btn btn-primary">Update</button>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

}
