@page
@model FluffyBunny.Admin.Pages.Tenants.Tenant.ApiResources.ApiResource.Scopes.Scope.EditModel
@{
    ViewData["Title"] = "Edit Api Resource Scope";
}
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-area="" asp-page="/Tenants/Index">Tenants</a></li>
        <li class="breadcrumb-item"><a asp-area="" asp-page="/Tenants/Tenant/Index">@Model.TenantId</a></li>
        <li class="breadcrumb-item"><a asp-area="" asp-page="/Tenants/Tenant/ApiResources/Index">Api Resources</a></li>
        <li class="breadcrumb-item"><a asp-area="" asp-page="/Tenants/Tenant/ApiResources/ApiResource/Index" asp-route-id="@Model.ApiResourceId">Api Resource</a></li>
        <li class="breadcrumb-item"><a asp-area="" asp-page="/Tenants/Tenant/ApiResources/ApiResource/Scopes/Index" asp-route-id="@Model.ApiResourceId">Scopes</a></li>

        <li class="breadcrumb-item active" aria-current="page">@ViewData["Title"]</li>
    </ol>
</nav>
<form method="post">
    <div class="card">
        <div class="card-header">
            Add Api Resource Scope
        </div>
        <input hidden asp-for="TenantId" class="form-control" />
        <input hidden asp-for="ApiResourceId" class="form-control" />
        <input hidden asp-for="Input.Id" class="form-control" />
        <input hidden asp-for="Input.PrependName" class="form-control" />

        <div class="card-body">
            The scope will be prepended with "@Model.Input.PrependName.".  i.e. @Model.Input.PrependName@(".")subscope, etc.
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <table class="table">

                    <tbody>

                        <tr>

                            <td class="w-50">
                                <div class="input-group mb-3">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text" id="basic-addon3">@Model.Input.PrependName.</span>
                                    </div>
                                    <input asp-for="Input.Scope" class="form-control" placeholder="subscope">
                                </div>
                                <span asp-validation-for="Input.Scope" class="text-danger"></span>


                            </td>
                        </tr>


                    <tbody>
                </table>
            </div>
        </div>

        <div class="card-footer text-muted">
            <button type="submit" class="btn btn-primary">Update</button>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

}

