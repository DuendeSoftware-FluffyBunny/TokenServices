@page
@model FluffyBunny.Admin.Pages.Tenants.Tenant.ApiResources.Secrets.AddModel
@{
    ViewData["Title"] = "Add Api Resource Secrets";
}
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-area="" asp-page="/Tenants/Index">Tenants</a></li>
        <li class="breadcrumb-item"><a asp-area="" asp-page="/Tenants/Tenant/Index">@Model.TenantId</a></li>
        <li class="breadcrumb-item"><a asp-area="" asp-page="../Index">Api Resources</a></li>
        <li class="breadcrumb-item"><a asp-area="" asp-page="./Index" asp-route-id="@Model.ApiResourceId">Api Resource Secrets</a></li>
        <li class="breadcrumb-item active" aria-current="page">@ViewData["Title"]</li>
    </ol>
</nav>

<form method="post">
    <div class="card">
        <div class="card-header">
            Add Api Resource Secret
        </div>
        <input hidden asp-for="TenantId" class="form-control" />
        <input hidden asp-for="ApiResourceId" class="form-control" />
        <input hidden asp-for="Input.Value" class="form-control" />
        <div id="cardBodyId">

            <div class="card-body">

                <div class="form-group">
                    <table class="table">
 
                        <tbody>

                            <tr>
                                <td class="w-50">
                                    <label asp-for="Input.SecretExpiration"></label>
                                </td>
                                <td class="w-50">
                                    @foreach (var item in Model.Input.SecretExpirations)
                                    {
                                        <input type="radio" asp-for="Input.SecretExpiration" value="@item" /> @item<br />
                                    }
                                    <span asp-validation-for="Input.SecretExpiration" class="text-danger"></span>

                                </td>
                            </tr>
                            <tr>
                                <td class="w-50">
                                    Secret
                                </td>
                                <td class="w-50">
                                    <input asp-for="Input.Value" hidden class="form-control" />
                                    <input disabled asp-for="Input.Value" class="form-control" />
                                    <p>Please Copy you will not see it again.  You can always create another one later.</p>
                                    <span asp-validation-for="Input.Value" class="text-danger"></span>

                                </td>
                            </tr>
                        <tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="card-footer text-muted">
            <button type="submit" class="btn btn-primary">Add</button>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

}
