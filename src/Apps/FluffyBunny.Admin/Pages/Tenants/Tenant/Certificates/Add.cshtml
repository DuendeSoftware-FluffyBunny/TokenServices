@page
@model FluffyBunny.Admin.Pages.Tenants.Tenant.Certificates.AddModel
@{
    ViewData["Title"] = "Add Certificate";
}
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-area="" asp-page="/Tenants/Index">Tenants</a></li>
        <li class="breadcrumb-item"><a asp-area="" asp-page="/Tenants/Tenant/Index">@Model.TenantId</a></li>
        <li class="breadcrumb-item"><a asp-area="" asp-page="./Index">Certificates</a></li>

        <li class="breadcrumb-item active" aria-current="page">@ViewData["Title"]</li>
    </ol>
</nav>
<form method="post">
    <div class="card">
        <div class="card-header">
            @ViewData["Title"]
        </div>
        <input hidden asp-for="TenantId" class="form-control" />
        <div id="cardBodyId">
            <div class="card-body">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <table class="table">
                        <tbody>
                            <tr>
                                <td class="w-50">
                                    <label asp-for="Input.SigningAlgorithmType"></label>
                                </td>
                                <td class="w-50">
                                    @foreach (var item in Model.Input.SigningAlgorithmTypes)
                                    {
                                        <input type="radio" asp-for="Input.SigningAlgorithmType" value="@item" /> @item<br />
                                    }
                                    <span asp-validation-for="Input.SigningAlgorithmType" class="text-danger"></span>
                                </td>
                            </tr>
                            <tr>
                                <td class="w-50">
                                    @nameof(Model.Input.Years)
                                </td>
                                <td class="w-50">
                                    <input asp-for="Input.Years" class="form-control" />
                                    <span asp-validation-for="Input.Years" class="text-danger"></span>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="card-footer text-muted">
            <button type="submit" class="btn btn-primary">Add</button>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

}