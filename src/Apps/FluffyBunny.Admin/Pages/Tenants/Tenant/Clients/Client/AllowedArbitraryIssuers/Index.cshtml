@page
@model FluffyBunny.Admin.Pages.Tenants.Tenant.Clients.Client.AllowedArbitraryIssuers.IndexModel

@{
    ViewData["Title"] = "Allowed Arbitrary Issuers";
}
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-area="" asp-page="/Tenants/Index">Tenants</a></li>
        <li class="breadcrumb-item"><a asp-area="" asp-page="/Tenants/Tenant/Index">@Model.TenantId</a></li>
        <li class="breadcrumb-item"><a asp-area="" asp-page="/Tenants/Tenant/Clients/Index">Clients</a></li>
        <li class="breadcrumb-item"><a asp-area="" asp-page="/Tenants/Tenant/Clients/Client/Index" asp-route-id="@Model.ClientId">Client</a></li>
        <li class="breadcrumb-item active" aria-current="page">@ViewData["Title"]</li>
    </ol>
</nav>

<div class="card">
    <div class="card-header text-muted">
        <a class="btn btn-sm btn-primary" asp-page="./Add"
           asp-route-id="@Model.ClientId">Add Allowed Arbitrary Issuer</a>
    </div>
    @if (Model.Entities.Any())
    {
        <div class="card-body">
            <table class="table">
                <thead>
                    <tr>
                        <th colspan="1">
                            <a asp-action="Index"
                               asp-route-id="@Model.ClientId"
                               asp-route-sortOrder="@Model.NameSortType">Scope</a>
                        </th>


                        <th colspan="1"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var entity in Model.Entities)
                    {
                        <tr>

                            <td class="w-50">
                                @entity.Issuer
                            </td>


                            <td class="w-50">
                                <div class="btn-group ">

                                    <a style="border-left-color: white;"
                                       class="btn btn-primary btn-sm active "
                                       role="button" aria-pressed="true"
                                       asp-page="./AllowedArbitraryIssuer/Edit"
                                       asp-route-clientId="@Model.ClientId"
                                       asp-route-id="@entity.Id">Edit</a>
                                    <a style="border-left-color: white;"
                                       class="btn btn-primary btn-sm active " role="button" aria-pressed="true"
                                       asp-page="./AllowedArbitraryIssuer/Delete"
                                       asp-route-clientId="@Model.ClientId"
                                       asp-route-id="@entity.Id">Delete</a>
                                </div>

                                 

                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>


    }

</div>

